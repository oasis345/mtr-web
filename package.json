{
  "name": "monorepo-monkey-traders",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "build:packages": "tsc -b packages/utils packages/network-core packages/auth-core packages/error-handler packages/ui",
    "build:web": "pnpm --filter web build",
    "start": "pnpm --filter web start",
    "lint": "eslint . --cache --cache-location .eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .eslintcache",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "test": "pnpm -r test",
    "clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo apps/*/.next apps/*/dist *.tsbuildinfo",
    "clean:full": "pnpm clean && rm -rf node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9",
    "@next/eslint-plugin-next": "^15.3.3",
    "@types/qs": "^6.14.0",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cpy-cli": "^5.0.0",
    "eslint": "^9",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
