{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".", // <-- 이 줄이 매우 중요합니다.
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true,
    "strict": false
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.ts"
  ],
  "exclude": ["node_modules", "*.config.js", "*.config.ts", "dist", ".next"],
  "references": [
    {
      "path": "../../packages/utils"
    },
    {
      "path": "../../packages/services"
    },
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/store"
    },
    {
      "path": "../../packages/hooks"
    },
    {
      "path": "../../packages/finance-core"
    },
    {
      "path": "../../packages/finance-ui"
    }
  ]
}
