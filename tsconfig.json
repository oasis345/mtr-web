{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "references": [
    { "path": "./packages/utils" },
    { "path": "./packages/ui" },
    { "path": "./packages/store" },
    { "path": "./packages/hooks" },
    { "path": "./packages/network-core" },
    { "path": "./packages/auth-core" },
    { "path": "./packages/error-handler" },
    { "path": "./packages/finance-core" },
    { "path": "./packages/finance-ui" }
  ],
  "exclude": [
    "node_modules",
    "**/*.config.js", // ✅ 모든 설정 파일 제외
    "**/*.config.ts", // ✅ 모든 설정 파일 제외
    "**/dist/**", // ✅ 모든 dist 폴더 제외
    "**/.next/**", // ✅ Next.js 빌드 폴더 제외
    "**/*.tsbuildinfo" // ✅ 빌드 캐시 파일 제외
  ]
}
